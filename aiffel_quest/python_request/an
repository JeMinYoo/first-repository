# 입력받기
word = input("")

# 출력하기
print("입력 단어:", word)

# 함수 정의
def wooYoungWoo(input):
    # 뒤집기
    reversedWord = word[::-1]
    print("역순 단어:" ,reversedWord)

    #확인작업
    if word == reversedWord:
        print("회문이 맞습니다")
    else:
        print("회문이 아닙니다")

# 테스트
wooYoungWoo(word)



word = input("")

print("입력 단어:", word)

def reverseWord(input):
    reversedWord = ''

    for i in word :
        reversedWord = i + reversedWord
        print("역순 단어: ", reversedWord)

    if word == reversedWord:
        print("맞아요")
    else:
        print("아니에요")

reverseWord(word)




